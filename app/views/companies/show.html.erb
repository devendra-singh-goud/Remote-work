<div class="col-lg-6 mx-lg-auto">
  <!-- <div class="card shadow"> -->
    <div class="card-header">
      <div class="card-title text-center">
        <h2 class="text-primary pt-4">Company</h2>
      </div>
      <div class="card-body">
        <p style="color: green"><%= notice %></p>
        <%= render @company %>
        <% if user_signed_in?%>
        <% if current_user == @company.user %>
          <%# if @currentUser === @company.user_id %>
            <%= button_to "Destroy this company", @company, method: :delete, class: "btn btn-primary mt-2" %>
            <%= link_to "Edit this company", edit_company_path(@company), class: "nav-link mt-2" %> 
          <% end %>
        <% end %>
        <%= link_to "Back to companies", companies_path, class: "nav-link mt-2" %>
        <div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="col-lg-6">
  <% if @company.images.attached? %>
    <%= image_tag @company.images, class: "img-fluid" %>
  <% end %>
</div>
